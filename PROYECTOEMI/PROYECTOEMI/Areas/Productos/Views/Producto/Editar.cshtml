@model Producto
    <center>
        <section id="abouts" class="abouts">
            <div class="container">
                <div class="row">
                    <div class="abouts_content">
                        <form method="post" action="/Productos/Producto/Guardar">
                            <input type="hidden" asp-for="ProductoId"/>
                            <h4>Modificar Productos</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NombreProducto"></label>
                                <input asp-for="NombreProducto" class="form-control" />
                                <span asp-validation-for="NombreProducto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Imagen"></label>
                                <input asp-for="Imagen" class="form-control" />
                                <span asp-validation-for="Imagen" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoriaId"></label>
                                <select asp-for="CategoriaId" class="form-control">
                                    <option>Seleccione</option>
                                    @foreach (Categoria item in Model.Categorias)
                                    {
                                        <option value="@item.CategoriaId">@item.NombreCategoria</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoriaId" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Modificar</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </center>